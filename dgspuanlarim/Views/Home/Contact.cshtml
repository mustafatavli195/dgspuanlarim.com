@{
    ViewData["Title"] = "İletişim | ";
}

<div class="container mt-5">

    <!-- Başlık -->
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">İletişim</h1>
        <p class="lead">Projeyle ilgili sorularınız, önerileriniz veya geri bildirimleriniz için aşağıdaki kanallardan bana ulaşabilirsiniz.</p>
    </div>

    <!-- İletişim Kartları -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm text-center border-0 contact-card">
                <div class="card-body">
                    <i class="bi bi-envelope-fill display-4 text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">Email</h5>
                    <p class="card-text"><a href="mailto:tavlioffical@gmail.com" class="link-primary">tavlioffical@gmail.com</a></p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm text-center border-0 contact-card">
                <div class="card-body">
                    <i class="bi bi-linkedin display-4 text-info mb-3"></i>
                    <h5 class="card-title fw-bold">LinkedIn</h5>
                    <p class="card-text"><a href="https://www.linkedin.com/in/mustafatavli/" target="_blank" class="link-primary">linkedin.com/in/mustafatavli</a></p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm text-center border-0 contact-card">
                <div class="card-body">
                    <i class="bi bi-github display-4 text-dark mb-3"></i>
                    <h5 class="card-title fw-bold">GitHub</h5>
                    <p class="card-text"><a href="https://github.com/mustafatavli195/dgspuanlarim.com" target="_blank" class="link-dark">GitHub</a></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Mesaj -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        @if (TempData["Success"] != null || TempData["Error"] != null)
        {
            <div id="contactToast" class="toast align-items-center text-white @(TempData["Success"] != null ? "bg-success" : "bg-danger") border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        @(TempData["Success"] ?? TempData["Error"])
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
    </div>

    <!-- İletişim Formu -->
    <form method="post" asp-action="Contact" class="card shadow-lg p-4 border-0 rounded-3">
        <div class="mb-3">
            <label for="name" class="form-label">Adınız</label>
            <input type="text" name="name" id="name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email Adresiniz</label>
            <input type="email" name="email" id="email" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="message" class="form-label">Mesajınız</label>
            <textarea name="message" id="message" class="form-control" rows="5" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary w-100">Mesaj Gönder</button>
    </form>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    .contact-card {
        transition: transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
    }

        .contact-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 0.8rem 1.5rem rgba(0,0,0,0.25);
        }

    a.link-primary:hover, a.link-dark:hover {
        text-decoration: underline;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.onload = function () {
            var toastEl = document.getElementById('contactToast');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl);
                toast.show();
            }
        };
    </script>
}