    .feature-card {
        transition: transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
    }

        .feature-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 0.8rem 1.5rem rgba(0,0,0,0.25);
        }

    a.link-primary:hover {
        text-decoration: underline;
    }
